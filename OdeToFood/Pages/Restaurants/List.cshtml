@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span>
                <button class="btn btn-group">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <tr>
        <th>Name:</th>
        <th>Location:</th>
        <th>Cusine Type:</th>
    </tr>
    @foreach (var restaraunt in Model.Restaurants)
    {
        <tr>
            <td>@restaraunt.Name</td>
            <td>@restaraunt.Location</td>
            <td>@restaraunt.Cuisine</td>
            <td>
                <a asp-page="./Detail" asp-route-restaurantId="@restaraunt.Id">
                    <i class="fas fa-search-plus"></i>

                </a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-restaurantId="@restaraunt.Id">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>


<div>@Model.Message</div>
