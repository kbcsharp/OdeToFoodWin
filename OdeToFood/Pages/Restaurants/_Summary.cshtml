@using OdeToFood.core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-search-plus pl-2 pr-2"></i>

        </a>
        <a asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-edit pl-2 pr-2"></i>
        </a>
        <a asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="fas fa-trash-alt pl-2 pr-2"></i>
        </a>
    </div>
</div>